//- layout.pug
include ./loader.pug
html
	head
		title #{title} - Training Japanese
		link(href='https://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')
		link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css')
		link(rel='stylesheet', href='/css/loader.css')
		link(rel='stylesheet', href='/css/site.css')

		meta(name='viewport', content='width=device-width, initial-scale=1.0')
	body
		nav.blue-grey.darken-1(role='navigation')
			.nav-wrapper.container
				a#logo-container.brand-logo(href='/') 日本語文法訓練 | Japanese Grammar
				ul.right.hide-on-med-and-down
					li
						a(href='/grammar') Grammar
					li
						a(href='/kanji') Kanji
				ul#nav-mobile.side-nav
					li
						a(href='/about') About
						a.button-collapse(href='#', data-activates='nav-mobile')
							i.material-icons menu

		block content

		.footer-copyright
			.container
				span.teal-text Powered by&nbsp;
				a.teal-text(href='http://materializecss.com') Materialize

		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js')
		script(src='/js/wanakana.min.js')

		block script